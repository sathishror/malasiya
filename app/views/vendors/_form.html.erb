<%= form_for(@vendor) do |f| %>
  <%=f.error_messages%>
  <div class="clearfix">&nbsp;</div>
  <div class="form-sec">
    <div class="form-sec-row">
      <label class="text">Vendor Name <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :name%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Email</label>
      <span class="in-box">
        <%= f.text_field :email%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Address <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :address%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Contact Number <span style=color:red>*</span></label>
      <span class="in-box">
        <%= f.text_field :contact_no%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Remarks</label>
      <span class="in-box">
        <%= f.text_field :remarks%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">Is Active</label>
      <span class="in-box">
        <%= f.check_box :is_active%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@vendor.new_record? ? "Create" : "Update"%>
      </span>
    </div>
  </div>

<%end%>
