      <label class="text">UOM</label>
      <span class="in-box">
        <%= f.text_field :uom%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit raw('Save'), :class=>"btn2"%>
      </span>
    </div>
  </div>

<%end%>
