<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <div id="Body">
    <div class="form-page">
      <div class="form-sec">
        <%=f.error_messages%>
        <div class="clearfix">&nbsp;</div>
        <h2>Forgot your password?</h2>
        <div class="form-sec-row">
          <%= f.label :email , :class=>"text"%>
          <span class="in-box">
            <%= f.email_field :email, :autofocus => true %>
          </span>
        </div>
        <div class="form-sec-row">
          <label class="text">&nbsp;</label>
          <span class="in-box">
            <%= f.submit "Send me reset password instructions" ,:class=>"btn2"%>
          </span>
        </div>
        <div class="form-sec-row">
          <label class="text">&nbsp;</label>
          <span class="in-box"> <%= link_to "Sign in", new_session_path(resource_name) %></span>
        </div>
      </div>
    </div>
  </div>
<%end%>
