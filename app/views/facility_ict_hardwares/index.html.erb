<%if !request.xhr?%>
  <div class="CenterNav">
    <h2 class="b-head">Manage Facility Ict Hardwares</h2>
  <%end%>
  <div id="div_ajax" >
    <%if @facility_ict_hardware && !@facility_ict_hardware.empty?%>
        <%@facility_ict_hardware.each do |ict_hardware|%>
          <div class="manage-user box">
            <div class="manage-user-row box">
              <div class="mu-c1">
              </div>
              <div class="mu-c2">
                <p class="head1"><%=ict_hardware.name%></p>
              </div>
              <div class="mu-c3">
                <%= link_to image_tag("../images/edit.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Edit", :action=>'edit', :id=>ict_hardware.id.to_i%>
                <%if ict_hardware.is_active %>
                  <%= link_to image_tag("../images/deactive.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Deactivate", update_status_facility_ict_hardwares_path(:id=>ict_hardware.id, :status=>"Deactivate"), :confirm => 'Do you want to really deactivate this hardware?', :method=>:post, :title=>"Deactive" %>
                <%else%>
                  <%= link_to  image_tag("../images/active.jpg",:width=>"14",:height=>"14",:alt=>"img") +"Activate",  update_status_facility_ict_hardwares_path(:id=>ict_hardware.id,:status=>"Activate"), :confirm => 'Do you want to really Activate this hardware?', :method=>:post, :title=>"Activate"%>
                <%end%>

              </div>
            </div>

          </div>
        <%end%><div class="manage-user-rows box"><br/><br/>
<%#= paginate @agencies %></div>
    <%else%>
      No Agencies Available
    <%end%>
<%#*<div><%= paginate @units %>
  </div>
</div>