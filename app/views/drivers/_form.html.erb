<%= form_for(@driver) do |f| %>
  <div class="form-sec">
    <%=f.error_messages%>
    <div class="clearfix">&nbsp;</div>
    <div class="form-sec-row">
      <%= f.label :name,raw("Name <span style=color:red>*</span>"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :name, :rows=>2, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <%= f.label :telephone_number,raw("Telephone Number <span style=color:red>*</span>"), :class=>"text"%>
      <span class="in-box">
        <%= f.text_field :telephone_number, :rows=>2, :autofocus => true%>
      </span>
    </div>
    <div class="form-sec-row">
      <label class="text">&nbsp;</label>
      <span class="in-box">
        <%= f.submit :class=>"btn2", :value=>@driver.new_record? ? "Create" : "Update"%>
      </span>
    </div>
  </div>
<%end%>